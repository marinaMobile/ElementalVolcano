<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back"
    android:layout_height="match_parent"
    tools:context=".second.Second">

    <ImageView
        android:id="@+id/lg_out_sec"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lg_out_sec" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="250dp"
        android:layout_height="60dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18"
        app:strokeWidth="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:background="@color/bg_sec_b_el_win">

            <TextView
                android:id="@+id/tv_sec_blnce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:text="Your balance : 1000"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/lg_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView"
        app:layout_constraintVertical_bias="0.100000024"
        app:srcCompat="@drawable/sec_gma_main" />

    <TextView
        android:id="@+id/txt_prs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press spin and choose and choose bet"
        android:textStyle="bold"
        android:textSize="16sp"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lg_img"
        app:layout_constraintVertical_bias="0.120000005" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="180dp"
        android:layout_height="60dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.76"
        app:strokeWidth="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_sec_b_el_win">

            <TextView
                android:id="@+id/tv_sec_win"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your win : 1000"
                android:fontFamily="@font/open_sans_bold"
                android:textColor="@color/white"
                android:textStyle="bold"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/plus_sec"
        android:layout_width="80dp"

        android:layout_height="60dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/cardView"
        app:strokeWidth="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_sec_b_el">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/pls_sec" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/sp_but"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Spin"
        android:textStyle="bold"
        android:backgroundTint="@color/bg_sec_b_el"
        android:fontFamily="@font/open_sans_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/grid_sec"
        android:layout_width="360dp"
        android:layout_height="300dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView">

        <ImageView
            android:id="@+id/img_1"
            android:layout_width="120dp"
            android:visibility="gone"
            android:layout_height="150dp"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/sec_gma_5" />

        <ImageView
            android:id="@+id/img_2"
            android:layout_width="120dp"
            android:visibility="gone"
            android:layout_height="150dp"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/sec_gma_2" />

        <ImageView
            android:id="@+id/img_3"
            android:layout_width="120dp"
            android:visibility="gone"
            android:layout_height="150dp"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/sec_gma_4" />

        <ImageView
            android:id="@+id/img_4"
            android:layout_width="120dp"
            android:visibility="gone"
            android:layout_height="150dp"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/sec_gma_1" />

        <ImageView
            android:id="@+id/img_5"
            android:layout_width="120dp"
            android:visibility="gone"
            android:layout_height="150dp"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/sec_gma_3" />

        <ImageView
            android:id="@+id/img_6"
            android:layout_width="120dp"
            android:visibility="gone"
            android:layout_height="150dp"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/sec_gma_main" />
    </androidx.gridlayout.widget.GridLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="80dp"
        app:cardCornerRadius="8dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/plus_sec"
        app:layout_constraintEnd_toStartOf="@+id/plus_sec"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/plus_sec" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/bg_sec_b_el"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_bet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/open_sans_bold"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>